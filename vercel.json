{
    "version": 2,
    "installCommand": "pip install pipenv && pipenv install",
    "buildCommand": "pipenv shell && python manage.py runserver",
    "builds": [
        {
            "src": "quizz_django/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "quizz_django/wsgi.py"
        }
    ]
}